{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": ".build",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"],
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "CommonJS",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@api/api/core": ["libs/api/core/src/index.ts"],
      "@api/api/relayers/api": ["libs/api/relayers/api/src/index.ts"],
      "@api/api/relayers/tests": ["libs/api/relayers/tests/src/index.ts"],
      "@api/shared/auth0": ["libs/shared/auth0/src/index.ts"],
      "@api/shared/aws": ["libs/shared/aws/src/index.ts"],
      "@api/shared/database": ["libs/shared/database/src/index.ts"],
      "@api/shared/k8s": ["libs/shared/k8s/src/index.ts"],
      "@api/shared/testing": ["libs/shared/testing/src/index.ts"],
      "@api/shared/trpc": ["libs/shared/trpc/src/index.ts"],
      "@api/shared/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    ".vscode/**/*",
    ".build/**/*",
    "tmp"
  ]
}
